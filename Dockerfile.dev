FROM node:20-alpine

WORKDIR /app

# Copiar package files
COPY package*.json ./

# Instalar dependencias
RUN npm install

# Copiar archivos de configuración
COPY tsconfig*.json ./

# Copiar código fuente
COPY src ./src

# Crear carpeta uploads
RUN mkdir -p uploads

# Exponer puerto
EXPOSE 3001

# El comando se ejecuta desde docker-compose